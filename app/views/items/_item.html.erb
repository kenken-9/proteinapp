<li class="list">
    <%= link_to item_path(item.id) do %>
        <div class="item-img-content">
            <%= image_tag item.image , class: "item-img" %>
        </div>
         <div class="item-info">
            <h3 class="item-name">
                商品名 : <%= item.name %><br>
                味 : <%= item.taste %>
            </h3>
        <div class="item-category">
            投稿者：<%=item.user.nickname%>
        </div>
    </div>
    <% end %>
</li>