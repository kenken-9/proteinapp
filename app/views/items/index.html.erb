<%= render "shared/header"  %>
<div class="top">
        <div class="top-title">
        <h1>プロテインを選ぶなら<br>アプリ名</h1>
        </div>
    </div>
    <div class="contents">
        <div class="item-contents">
            <h2 class="item-title">Protein index</h2>
            <ul class="item-list">
                <% @items.each do | item |  %>
                    <li class="list">
                        <%= link_to item_path(item.id) do %>
                            <div class="item-img-content">
                            <%= image_tag item.image , class: "item-img" %>
                            </div>
                            <div class="item-info">
                                <h3 class="item-name">
                                <%= item.name %>
                                </h3>
                                <div class="item-category">
                                    投稿者：<%=item.user.nickname%>
                                </div>
                            </div>
                        <% end %>
                    </li>
                <% end %>
            </ul>
        </div>
        <div class="side-ber">
            <ul class="side-info">
              <% if user_signed_in? %>
                <%= link_to(new_item_path,class: "post-btn") do  %>
                <span class= "post-btn-text">商品投稿</span>
                <%= image_tag "icon_barbell.png"  , class: "post-btn-icon" %>
                <%end%>
                <%else %>
                <li> 
                    <div class="user-info-container">
                        <div class="side-container">
                            <h2>新規登録</h2>
                            <div class="explan-login">
                                <span>新規登録をすると、お気に入りのプロテインを保存したり、投稿できたりします。</span>
                            </div>
                            <div class="sign-up-box">
                                <%= link_to "新規登録" , new_user_registration_path , class: "side-sign-up" %> </li>
                            </div>
                        </div>
                    </div>
            <%end %>
             
            </ul>
        </div>
    </div>
<%= render "shared/footer"  %>