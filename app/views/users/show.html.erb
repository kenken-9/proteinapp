<% if @bookmark_list.present? %>
  <% @bookmark_list.each do |item| %>
    <%= item.name %>
    <%= image_tag item.image%>
    <%end %>
<%else%>
  <h3>お気に入りはありません<h3>
<%end%>

<% @items.each do | item |  %>
  <li class="list">
    <%= link_to item_path(item.id) do %>
      <div class="item-img-content">
        <%= image_tag item.image , class: "item-img" %>
       </div>
       <div class="item-info">
        <h3 class="item-name">
          <%= item.name %>
        </h3>
      </div>
      <% end %>
  </li>
<% end %>

