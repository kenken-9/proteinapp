<%= render "shared/header"%>

<%= form_with model: @user, url: new_user_registration_path, class: 'registration-main', local: true do |f| %>

<div class="form-wrap">
  <div class="form-account">

    <div class="form-account-title">
      <h1 class="title-signup">
      新規登録
      </h1>
    </div>

    <div class="from-group">
      <div class="form-text-wrap">
        <label class="form-text">ニックネーム</label>
        <span class="indispensable">必須</span>
      </div>
      <%= f.text_field :nickname, class:"input-default", id:"nickname", maxlength:"30" %>
    </div>
    

    <div class="from-group">
      <div class="form-text-wrap">
        <label class="form-text">メールアドレス</label>
        <span class="indispensable">必須</span>
      </div>
      <%= f.email_field :email, class:"input-default", id:"email", autofocus: true %>
    </div>

    <div class="from-group">
      <div class="form-text-wrap">
        <label class="form-text">パスワード ※６文字以上の半角英数字</label>
        <span class="indispensable">必須</span>
      </div>
      <%= f.password_field :password, class:"input-default", id:"password" %>
    </div>

    <div class="from-group">
      <div class="form-text-wrap">
        <label class="form-text">パスワード （確認）</label>
        <span class="indispensable">必須</span>
      </div>
      <%= f.password_field :password_confirmation, class:"input-default", id:"password_confirmation" %>
    </div>

    <div class="from-group">
      <div class="form-text-wrap">
        <label class="form-text">プロフィール</label>
        <span class="indispensable">必須</span>
      </div>
      <%= f.text_area :profile, class:"input-default", id:"profile" %>
    </div>
    

    

    

    <div class="actions">
      <%= f.submit "新規登録" %>
    </div>
  </div>
</div>
<% end %>

<%= render "shared/footer"%>
