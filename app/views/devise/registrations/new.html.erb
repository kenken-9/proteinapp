<%= render "shared/header"%>

<%= form_with model: @user, url: new_user_registration_path, class: 'registration-main', local: true do |f| %>

<div class="form-wrap">

    <div class="form-account-title">
      <h1 class="title-signup">
      アカウント作成
      </h1>
    </div>

    <div class="form-account">

      <div class="from-group">
        <div class="form-text-wrap">
          <label class="form-text">ニックネーム</label>
          <span class="indispensable">必須</span>
        </div>
        <%= f.text_field :nickname, class:"input-default", id:"nickname",placeholder:"プロちゃん" ,maxlength:"30" %>
      </div>
      

      <div class="from-group">
        <div class="form-text-wrap">
          <label class="form-text">メールアドレス</label>
          <span class="indispensable">必須</span>
        </div>
        <%= f.email_field :email, class:"input-default", id:"email", autofocus: true ,placeholder:"PCまたは携帯"%>
      </div>

      <div class="from-group">
        <div class="form-text-wrap">
          <label class="form-text">パスワード </label>
          <span class="indispensable">必須</span>
        </div>
        <%= f.password_field :password, class:"input-default", id:"password" ,placeholder:"６文字以上の半角英数字"%>
      </div>

      <div class="from-group">
        <div class="form-text-wrap">
          <label class="form-text">パスワード （確認）</label>
          <span class="indispensable">必須</span>
        </div>
        <%= f.password_field :password_confirmation, class:"input-default", id:"password_confirmation" , placeholder:"同一パスワード"%>
      </div>

      <div class="from-group">
        <div class="form-text-wrap">
          <label class="form-text">プロフィール</label>
          <span class="indispensable">必須</span>
        </div>
        <%= f.text_area :profile, class:"input-default", id:"profile" , placeholder:"最近、筋トレをはじめました！"%>
      </div>

      <div class="register-btn">
        <%= f.submit "アカウント作成" , class:"register-bad3ff-btn" %>
      </div>

    </div>
</div>
<% end %>
<%= render "shared/footer"%>
