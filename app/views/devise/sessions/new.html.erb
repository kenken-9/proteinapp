<%= render "shared/subheader" %>

<%= form_with model: @user, url: user_session_path, class: 'registration-main', local: true do |f| %>

<div class="session-wrap">

    <div class="form-account-title">
      <h1 class="title-signup">
      ログイン
      </h1>
    <p>新規登録をしないで機能を試したい方は</p>
    <%= link_to "こちら" , users_guest_sign_in_path  ,method: :post %>
    </div>

    <div class="form-account">

    <div class="login-flash-message">
      <%= flash[:notice] %>
      <%= flash[:alert] %>
    </div>

      <div class="from-group">
        <div class="form-text-wrap">
          <label class="form-text">メールアドレス</label>
          <span class="indispensable">必須</span>
        </div>
        <%= f.email_field :email, class:"input-default", id:"email", autofocus: true ,placeholder:"PCまたは携帯"%>
      </div>

      <div class="from-group">
        <div class="form-text-wrap">
          <label class="form-text">パスワード </label>
          <span class="indispensable">必須</span>
        </div>
        <%= f.password_field :password, class:"input-default", id:"password" ,placeholder:"６文字以上の半角英数字"%>
      </div>

      <div class="login-btn">
        <%= f.submit "ログイン" , class:"login-bad3ff-btn" %>
      </div>

    </div>
  <% end %>
</div>
<%= render "shared/footer"%>

